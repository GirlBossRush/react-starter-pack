@import "~normalize.css/normalize.css"

*, *:before, *:after
 box-sizing border-box


html
  height 100%

body
  display flex
  flex-flow column nowrap
  line-height 1.3
  min-height 100%
  user-select none

main
  display flex
  flex-flow column nowrap
  flex 1 0 auto

[data-selectable]
  user-select text
